{
  "name": "urameshibr/phpbits",
  "description": "Mini framework PHPOO",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "pimple/pimple": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Root\\": "src/",
      "App\\": "app/"
    },
    "files": [
      "app/helpers.php",
      "src/root_helpers.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "require-dev": {
    "filp/whoops": "^2.2"
  }
}
